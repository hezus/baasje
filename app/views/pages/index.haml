#loader
  = image_tag 'loader.gif'
#ui
  .image-and-info
    .image
    .info
      .pics
        %i.fa.fa-camera
        %span.pic_amount
      .name
      .age
    .love
      Love
    .kill
      Kill
  #controls
    #like.button
    #info.button
    #dislike.button
  #info-extended
    .text
      .name-and-age
        .name
        .age
      .race
      .location
        .shelter_name
        .shelter_city
    .badges
      .badge
        = image_tag 'speels.png'
        Speels
      .badge
        = image_tag 'buiten.png'
        Buiten
      .badge
        = image_tag 'andere_honden.png'
